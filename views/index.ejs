<!DOCTYPE html>
<html>
<head>
    <title>Helpdesk Tickets</title>
</head>
<body>
    <h1>Helpdesk Tickets</h1>
    <a href="/create">Create New Ticket</a>
    <table>
        <thead>
          <tr>
            <th>Ticket Number</th>
            <th>Description</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Images</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tickets.forEach(ticket => { %>
          <tr>
            <td><%= ticket.ticketNumber %></td>
            <td><%= ticket.description %></td>
            <td><%= ticket.status %></td>
            <td><%= ticket.createdAt.toLocaleString() %></td>
            <td><%= ticket.updatedAt.toLocaleString() %></td>
            <td>
              <% if (ticket.image) { %>
                <a href="/image/<%= ticket._id %>">Images</a> 
              <% } else { %>
                No Picture
              <% } %>
            </td>
            <td><a href="/update/<%= ticket._id %>">Update</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
</body>
</html>