<!DOCTYPE html>
<html>
<head>
    <title>Update Ticket</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/core@1.1.1/dist/css/tabler.min.css" />
</head>
<body>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">View Ticket</h3>
            <div class="card-actions">
              <a href="/update/<%= ticket._id %>" class="btn btn-primary">
                <i class="ti ti-edit"></i> Edit Ticket
              </a>
            </div>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label class="form-label">Name</label>
                  <input type="text" value="<%= ticket.name %>" class="form-control" readonly>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label class="form-label">Menu</label>
                  <input type="text" value="<%= ticket.menu %>" class="form-control" readonly>
                </div>
              </div>
            </div>
            
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label class="form-label">Phone Number</label>
                  <input type="text" value="<%= ticket.phoneNumber %>" class="form-control" readonly>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label class="form-label">LINE ID</label>
                  <input type="text" value="<%= ticket.lineID %>" class="form-control" readonly>
                </div>
              </div>
            </div>
            
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label class="form-label">Category</label>
                  <input type="text" value="<%= ticket.category %>" class="form-control" readonly>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label class="form-label">Status</label>
                  <div>
                    <% if (ticket.status === 'Open') { %>
                      <span class="badge bg-primary"><%= ticket.status %></span>
                    <% } else if (ticket.status === 'In Progress') { %>
                      <span class="badge bg-yellow"><%= ticket.status %></span>
                    <% } else if (ticket.status === 'Resolved') { %>
                      <span class="badge bg-green"><%= ticket.status %></span>
                    <% } else if (ticket.status === 'Closed') { %>
                      <span class="badge bg-secondary"><%= ticket.status %></span>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="form-group mb-3">
              <label class="form-label">Description</label>
              <textarea class="form-control" rows="5" readonly><%= ticket.description %></textarea>
            </div>
            
            <div class="form-group mb-3">
              <label class="form-label">Image</label>
              <% if (ticket.image) { %>
                <div>
                  <img src="/image/<%= ticket._id %>" alt="Ticket Image" class="img-thumbnail" style="max-width: 300px;">
                </div>
              <% } else { %>
                <div class="text-muted">No Image</div>
              <% } %>
            </div>
            
            <div class="form-group mb-3">
              <label class="form-label">Ticket Number</label>
              <div class="form-control-plaintext"><%= ticket.ticketNumber %></div>
            </div>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label class="form-label">Created At</label>
                  <div class="form-control-plaintext"><%= ticket.createdAt.toLocaleString() %></div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label class="form-label">Updated At</label>
                  <div class="form-control-plaintext"><%= ticket.updatedAt.toLocaleString() %></div>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="d-flex">
              <a href="/" class="btn btn-link">Back to Ticket List</a>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.1.1/dist/js/tabler.min.js"></script>
</html>